<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_activity__theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/crash_report__color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="crash_report__theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/crash_report__error_red</item>
        <item name="colorPrimaryDark">@color/crash_report__error_red</item>
        <item name="colorAccent">@color/crash_report__color_accent</item>
    </style>

    <style name="add_app__theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="main_activity__main_title_small" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="main_activity__main_title_big" parent="main_activity__main_title_small">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="main_activity__sub_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="install_activity__default_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="install_activity__button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="install_activity__bold_text" parent="install_activity__default_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="install_activity__monospace_text" parent="install_activity__default_text">
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="install_activity__segment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>